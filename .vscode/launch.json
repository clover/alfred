    "version": "0.2.0",
    "configurations": [
        {
            "name": "Generate Config File",
            "type": "Ruby",
            "request": "launch",
            "program": "${workspaceRoot}/alfred.rb",
            "args": ["--service", "echo-server-client", "--debug"],
        },
        {
            "name": "Dry Run",
            "type": "Ruby",
            "request": "launch",
            "program": "${workspaceRoot}/alfred.rb",
            "args": ["--service", "echo-server-client", "--dry-run", "--debug"],
        },
        {
            "name": "Dry Run components",
            "type": "Ruby",
            "request": "launch",
            "program": "${workspaceRoot}/alfred.rb",
            "args": ["--component", "memcached", "--dry-run", "--debug", "--dry-run"],
        }
    ]
}
